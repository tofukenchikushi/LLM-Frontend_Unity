.translateUI--invisible {
    transition-duration: 1s;
    opacity: 0;
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgb(255, 0, 243);
    translate: 100% 0;
}

.translateUI--visible {
    transition-duration: 1s;
    opacity: 1;
    translate: 0 0;
}

.centerLogo {
    width: 400px;
    height: 400px;
    max-width: 500px;
    max-height: 500px;
    min-width: 200px;
    min-height: 200px;
    background-color: rgb(0, 134, 255);
    transition-duration: 2s;
    position: absolute;
    top: 35%;
    transition-timing-function: ease;
}

.centerLogo--down {
    translate: 0 15%;
    position: absolute;
    top: 35%;
    transition-timing-function: ease;
    transition-duration: 2s;
}
